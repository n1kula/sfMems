{% extends "MemsLayoutBundle::layout.html.twig" %}

{% block title %}Lista memów{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8">
    {% for mem in pages %}
        <div class="panel panel-default">
            <center>
                <p>Dodany przez {{ mem.createdBy }}, dnia {{ mem.createdAt|date('Y-m-d H:i:s') }} </p>
            <a href="{{ path('mems_show', {'slug': mem.slug}) }}">
                <img  src="{{ asset('uploads/mems/' ~ mem.imageName) }}" alt="{{ mem.title }}" class="thumbnail" style="width: 450px">
            </a>
            <p>Lubie to | Udostępnij</p>
            </center>
        </div>
    {% else %}
        <p>Brak memów</p>    
    {% endfor %}
    
     {{ knp_pagination_render(pages) }}
        </div>
        <div class="col-lg-4">
            {% include "MemsLayoutBundle:Default:side.html.twig" %}
        </div>
    </div>
{% endblock %}